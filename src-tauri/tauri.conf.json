{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "vector",
	"version": "0.1.0",
	"identifier": "app.vectorfiles",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},

	"app": {
		"windows": [
			{
				"title": "vector",
				"minWidth": 500,
				"minHeight": 300,
				"hiddenTitle": true,
				"titleBarStyle": "Overlay"
			}
		],
		"security": {
			"csp": null
		}
	},

	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["icons/icon.png"]
	}
}
